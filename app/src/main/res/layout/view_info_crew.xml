<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCrewName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCrewRole"
        android:fontFamily="@font/montserrat_semibold"
        tools:text="@string/dummy_crew_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="@dimen/zero_measure"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCrewRole"
        android:fontFamily="@font/montserrat_medium"
        tools:text="@string/dummy_crew_role"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>